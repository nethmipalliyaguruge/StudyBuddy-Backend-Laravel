              }
            ],
            "url": {
              "raw": "{{base_url}}/notes/1",
              "host": ["{{base_url}}"],
              "path": ["notes", "1"]
            },
            "description": "Delete a note (only owner can delete, cannot delete if purchased)"
          }
        }
