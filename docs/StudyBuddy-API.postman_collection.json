    {
      "name": "My Notes",
      "item": [
        {
          "name": "List My Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/my-notes",
              "host": ["{{base_url}}"],
              "path": ["my-notes"]
            },
            "description": "Get all notes uploaded by the authenticated user"
          }
        },
        {
          "name": "List My Notes by Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/my-notes?status=pending",
              "host": ["{{base_url}}"],
              "path": ["my-notes"],
              "query": [
                {
                  "key": "status",
                  "value": "pending",
                  "description": "Options: pending, approved, disabled"
                }
              ]
            },
            "description": "Get user's notes filtered by status"
          }
        },
        {
          "name": "Upload Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "module_id",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "title",
                  "value": "Sample Note Title",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "This is a sample note description with detailed information about the content.",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "500.00",
                  "type": "text"
                },
                {
                  "key": "note_file",
                  "type": "file",
                  "description": "PDF, DOC, DOCX, PPT, PPTX (max 50MB)"
                },
                {
                  "key": "previews[]",
                  "type": "file",
                  "description": "Preview images JPG, PNG (max 3 files, 20MB each)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/notes",
              "host": ["{{base_url}}"],
              "path": ["notes"]
            },
            "description": "Upload a new note (requires file upload)"
          }
        },
        {
          "name": "Update Note",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Updated Note Title\",\n    \"description\": \"Updated description\",\n    \"price\": 600.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/notes/1",
              "host": ["{{base_url}}"],
              "path": ["notes", "1"]
            },
            "description": "Update an existing note (only owner can update)"
          }
        },
        {
          "name": "Delete Note",
          "request": {
            "method": "DELETE",
