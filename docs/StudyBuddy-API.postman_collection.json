              "raw": "{\n    \"session_id\": \"cs_test_xxxxx\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/checkout/verify",
              "host": ["{{base_url}}"],
              "path": ["checkout", "verify"]
            },
