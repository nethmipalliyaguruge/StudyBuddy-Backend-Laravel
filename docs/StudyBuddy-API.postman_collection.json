        {
          "name": "List Materials with Filters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/materials?school_id=1&level_id=1&module_id=1&search=test&min_price=0&max_price=1000&sort=newest&per_page=15",
              "host": ["{{base_url}}"],
              "path": ["materials"],
              "query": [
                {
                  "key": "school_id",
                  "value": "1"
                },
                {
                  "key": "level_id",
                  "value": "1"
                },
                {
                  "key": "module_id",
                  "value": "1"
                },
                {
                  "key": "search",
                  "value": "test"
                },
                {
                  "key": "min_price",
                  "value": "0"
                },
                {
                  "key": "max_price",
                  "value": "1000"
                },
                {
                  "key": "sort",
                  "value": "newest",
                  "description": "Options: newest, oldest, price_low, price_high"
                },
                {
                  "key": "per_page",
                  "value": "15"
                }
              ]
            },
            "description": "Get materials with all available filters"
          }
        },
        {
          "name": "Get Material",
          "request": {
            "method": "GET",
